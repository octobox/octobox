<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Octobox</title>
    <%= csrf_meta_tags %>

    <%= render 'layouts/favicons' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="turbolinks-cache-control" content="no-preview">
    <meta name="Description" content="The best way to manage your GitHub Notifications">

    <link rel="preconnect" href="https://api.github.com">

    <% if Rails.env.production? && Rails.application.secrets.google_analytics_id.present? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', '<%= Rails.application.secrets.google_analytics_id %>', 'auto');
      </script>
    <% end %>

    <% if Rails.application.secrets.bugsnag_js_api_key.present? %>
      <script src="//d2wy8f7a9ursnm.cloudfront.net/v4/bugsnag.min.js"></script>
      <script>window.bugsnagClient = bugsnag({ apiKey: '<%= Rails.application.secrets.bugsnag_js_api_key %>', releaseStage: '<%= ENV["RAILS_ENV"] %>' })</script>
    <% end %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <meta property="og:title" content="Octobox">
    <meta property="og:description" content="The best way to manage your GitHub Notifications">
    <meta property="og:image" content="<%= asset_url 'app-icon.png' %>">
    <meta property="og:url" content="<%= root_url %>">
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="Octobox" />

    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="teabass">
  </head>

  <body class="flex-body">
    <% if logged_in? %>
      <div class="flex-header">
        <%= render 'layouts/header' %>
      </div>
    <% elsif !current_page?('/') %>

      <div class="jumbotron">
        <div class="container">
          <h1 class="text-center">
            <%= link_to root_path, class: 'text-dark' do %>
              <%= octobox_round(80) %> Octobox
            <% end %>
          </h1>
          <p class="text-center">Untangle your GitHub Notifications</p>
        </div>
      </div>

    <% end %>
    <div class="flex-header header-flash-messages">
      <%= flash_messages %>
    </div>

    <%= yield %>

    <% if logged_in? %>
      <%= render 'notifications/search-help' %>
    <% end %>

    <% if Rails.env.production? && Rails.application.secrets.google_analytics_id.present? %>
      <script>
        if (typeof ga === 'function') { ga('send', 'pageview', location.pathname+location.search) }
      </script>
    <% end %>
  </body>
</html>
